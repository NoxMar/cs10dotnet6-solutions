@using Packt.Shared
@model IEnumerable<Product>
@{
    string title = "Products That Cost More Than " + ViewData["MaxPrice"];
    ViewData["Title"] = title;
}
<h2>@title</h2>
<table class="table">
    <thead>
    <tr>
        <th>Category Name</th>
        <th>Supplier's Company Name</th>
        <th>Product Name</th>
        <th>Unit Price</th>
        <th>Units In Stock</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => p.Category.CategoryName)</td>
                <td>@Html.DisplayFor(_ => p.Supplier.CompanyName)</td>
                <td>@Html.DisplayFor(_ => p.ProductName)</td>
                <td>@Html.DisplayFor(_ => p.UnitPrice)</td>
                <td>@Html.DisplayFor(_ => p.UnitsInStock)</td>
            </tr>
        }
    </tbody>
</table>