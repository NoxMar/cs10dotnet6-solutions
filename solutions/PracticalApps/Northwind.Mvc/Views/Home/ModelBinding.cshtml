@model HomeModelBindingViewModel 
@{
    ViewData["Title"] = "Model Binding Demo";
}
<h1>@ViewData["Title"]</h1>
<div>
    Enter values for your thing in the following form:
</div>
<form method="POST" action="/home/modelbinding/2?id=3">
    <input name="id" value="1" />
    <input name="color" value="Red"/>
    <input name="email" value="test@example.com"/>
    <input type="submit"/>
</form>
@if (Model is not null)
{
    <h2>Submitted Thing</h2>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-3 text-md-end">Model.Thing.Id</dt>
            <dd class="col-sm-9">@Model.Thing.Id</dd>
            <dt class="col-sm-3 text-md-end">Model.Thing.Color</dt>
            <dd class="col-sm-9">@Model.Thing.Color</dd>
            <dt class="col-sm-3 text-md-end">Model.Thing.Email</dt>
            <dd class="col-sm-9">@Model.Thing.Email</dd>
        </dl>
    </div>
    @if (Model.HasErrors)
    {
        <div>
            @foreach (var errorMessage in Model.ValidationErrors)
            {
                <div class="alert alert-danger" role="alert">@errorMessage</div>
            }
        </div>
    }
}