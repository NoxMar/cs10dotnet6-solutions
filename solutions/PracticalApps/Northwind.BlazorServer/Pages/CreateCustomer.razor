@page "/createcustomer"
@using Northwind.BlazorServer.Data
@using Packt.Shared
@inject INorthwindService _service;
@*@inject NavigationManager _navigation;*@
<h3>Create Customer</h3>
<CustomerDetail ButtonText="Create Customer"
                Customer="@_customer"
                OnValidSubmit="@Create"/>

@code {
    private Customer _customer = new();

    private async Task Create()
    {
        await _service.CreateCustomerAsync(_customer);
        @*_navigation.NavigateTo("customers");*@
    }
}